<Page
    x:Class="MeterApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MeterApp.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MeterApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:MeterApp.ViewModels"
    d:DataContext="{d:DesignInstance local:MetersManager,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


        <GridView ItemsSource="{Binding Meters}" >
            <GridView.Resources>
                <ResourceDictionary>
                    <DataTemplate x:Key="ElectricMeterTemplate" x:DataType="viewModels:ElectricMeterViewModel">
                        <controls:ElectricMeterControl />
                    </DataTemplate>
                    <DataTemplate x:Key="GasMeterTemplate" x:DataType="viewModels:GasMeterViewModel">
                        <controls:GasMeterControl />
                    </DataTemplate>
                </ResourceDictionary>
            </GridView.Resources>
        </GridView>
    </Grid>
</Page>